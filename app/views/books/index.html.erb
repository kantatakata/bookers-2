<h1>User info</h1>
  <% if user.image.attached? %>
    <%= image_tag user.image, size: "200x200" %>
<% else %>
    <%= image_tag 'no_image', size: "200x200" %>
<% end %>
   
   
   
   
<h1>New book</h1>
<%= form_with model: @book, do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
	
  <h4>Opinion</h4>
  <%= f.text_area :body %>
	
  <%= f.submit 'Create Book' %>
<% end %>
<% end %>
