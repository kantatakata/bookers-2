<%= notice %>
 <h1>User info</h1>
    <%= image_tag current_user.get_profile_image(100,100) %>
  <p>name：<%= @user.name %></p>
  <p>introduction：<%= @user.introduction %></p>
   <p><%= link_to edit_user_path(@user.id) %></p>
   
   
   <h1>New book</h1>
<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this obj from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>

<h1>Books</h1>
<% @books.each do |book| %>
<div>
  
  <p><%= image_tag book.user.get_profile_image(100,100) %></p>
  <p>Title<%= link_to book.title, book_path(book.id) %></p>
  <p>Opinion：<%= book.body %></p>
</div>
<% end %>
