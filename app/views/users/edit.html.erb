<main>
<%= notice%>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>User info</h2>
<% if @user.errors.any? %>
  <%= @user.errors.count %>errors prohibited this obj from being saved:
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<%= form_with model: @user do |f| %>
      <div class="form-group">
       <%= f.label :name, "Name"%>
  <%= f.text_field :name, autofocus: true,placeholder:"名前", class: "form-control"%>
      </div>
      <div class="form-group">
        <%= f.label :Image, "Image"%>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*", class: "form-control-file"%>
      </div>
      <div class="form-group">
         <%= f.label :introduction, "Introduction" %>
  <%= f.text_area :introduction, autofocus: true, placeholder:"自己紹介文", class: "form-control"%>
      </div>
      <div class="form-group">
         <%= f.submit "Update User", class:"btn btn-secondary"%>
      </div>
    <% end %>
</div>
</div>
</div>
</main>
